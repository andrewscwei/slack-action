{
  "name": "slack-action",
  "version": "1.0.0",
  "description": "A GitHub Action for sending build status alerts to a Slack channel",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run lint",
    "build": "npm run clean && tsc",
    "build:test": "npm run build -- --project tsconfig.test.json",
    "test": "mocha --timeout 30000 --reporter spec --extension spec.js --full-trace --colors --recursive --bail --exit $([ -z \"$npm_config_files\" ] && echo \"dist\" || echo \"dist/$npm_config_files\")",
    "test:ts": "mocha -r ts-node/register --timeout 30000 --reporter spec --extension spec.ts --full-trace --colors --recursive --bail --exit $([ -z \"$npm_config_files\" ] && echo \"src\" || echo \"src/$npm_config_files\")",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewscwei/slack-action"
  },
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.4",
    "eslint": "^8.6.0",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "axios": "^0.24.0",
    "lodash": "^4.17.21"
  }
}
